<h2>Undevoured</h1>
<ul>
  {{#each burgers}}
     {{#unless devoured}}
        <li>{{burger_name}} <button data-id={{id}} class="devour-button">Devour</button></li>
      {{/unless}}
  {{/each}}
</ul>


<h2>Devoured</h1>
<ul>
  {{#each burgers}}
     {{#if devoured}}
        <li>{{burger_name}} </li>
      {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="b">Burger Name:</label>
    <input type="text" id="b" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>